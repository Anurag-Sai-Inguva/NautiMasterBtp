<mvc:View
    xmlns:tnt="sap.tnt"
    xmlns:form="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    controllerName="nauticalfe.controller.MasterVoyageType"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:core="sap.ui.core"
>
<Page id="_IDGenPage1">
    <headerContent>
        <Bar class="customHeader">
            <contentLeft>
                <core:Icon
                    src="sap-icon://nav-back"
                    class="size1"
                    color="#FFFFFF"
                    press="backPress"
                />
                <core:Icon
                    src="sap-icon://home"
                    class="size1"
                    color="#FFFFFF"
                    press="onBackPressHome"
                />
                <Image
                    src="./images/ingenxlogo.jpg"
                    height="75%"
                />
                <Text
                    class="textBid"
                    text='Change View Refrence Voyage Type Search Help: Overview'
                />
            </contentLeft>
            <contentRight>
                <core:Icon
                    src="sap-icon://search"
                    class="size1"
                    color="#FFFFFF"
                >
                    <core:layoutData>
                        <FlexItemData growFactor="1" />
                    </core:layoutData>
                </core:Icon>
                <core:Icon
                    src="sap-icon://SAP-icons-TNT/user"
                    class="size1"
                    color="#FFFFFF"
                >
                    <core:layoutData>
                        <FlexItemData growFactor="1" />
                    </core:layoutData>
                </core:Icon>
            </contentRight>
        </Bar>
    </headerContent>
    <Bar id="_IDGenBar1">
        <contentLeft>
            <Button text="New Entries" press="newEntries" />
            <Button text="Copy As" press="onCopyAs" />
            <Button text="Edit"  press="pressEdit"/>
            <Button text="Delete" press="onDeletePress" />
            <Button id="button" icon="sap-icon://slim-arrow-down" iconFirst="false" text="More" press="onPress"
             ariaHasPopup="Menu"/>
        </contentLeft>
        <contentRight>
            <core:Icon src="sap-icon://print" color="#FF0000" />
            <Button text="Exit" press="onExit" />
        </contentRight>
    </Bar>
    
        <Label
            text="Voyage Type Master Table "
            class="masterheadings"
        />
        <Table
            id="createTypeTable"
            mode="MultiSelect"
            items="{/VOYTYP}"
            updateFinished="onTableUpdateFinished"
            selectionChange="selectedItems"
            width="95%"
            class="table">
            <columns>
                <Column id="_IDGenColumn1">
                    <Text id="_IDGenText11" text="Voyage Code" />
                </Column>
                <Column id="_IDGenColumn2">
                    <Text id="_IDGenText2" text="Voyage Code Description" />
                </Column>
            </columns>
            <items>
                <ColumnListItem id="_IDGenColumnListItem1">
                    <cells>
                        <Text id="voycd" text="{VOYCD}" />
                        <Text id="voydesc" text="{VOYDES}" /> 
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
        <Table
            id="entryTypeTable"
            updateFinished="onTableUpdateFinished"
            selectionChange="selectedItems"
            width="100%"
            class="table"
            visible="false"
            mode="MultiSelect"
        >
            <columns>
                <Column>
                    <Text text="Voyage Code" />
                </Column>
                <Column>
                    <Text text="Voyage Code Description" />
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <Input id="voyCode"  maxLength="4"/>
                        <Input id="voyCodeDesc" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
       
        <Table
            id="updateTypeTable"
            updateFinished="onTableUpdateFinished"
            selectionChange="selectedItems"
            width="95%"
            class="table"
            visible="false"
           
        >
            <columns>
                <Column>
                    <Text text="Voyage Code" />
                </Column>
                <Column>
                    <Text text="Voyage Code Description" />
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <Text id="voyCode1" text="" />
                        <Input id="voyCodeDesc1"  editable="true"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>

 
            <!-- main page footer -->
            <footer>
                <Bar  id="mainPageFooter">
                    <contentRight>
                        <Button id="mainPageSave" text="Save" type="Ghost" press="onSave" />
                        <Button id="_IDGenButton22" text="Cancel" type="Ghost" press="onCancel" />
                    </contentRight>
                </Bar>
            </footer>
            
                
           
            <OverflowToolbar id="mainPageFooter2" design="Auto" visible="false" >
                <ToolbarSpacer id="_IDGenToolbarSpacer4" />
                <Button
                    id="mainPageSave12"
                    text="Update"
                    press="onUpdate"
                />
                <Button
                    id="_IDGenButton23"
                    text="Cancel"
                    press="onCancel"
                />
            </OverflowToolbar>
 
          
           
       
    </Page>
 
  
</mvc:View>