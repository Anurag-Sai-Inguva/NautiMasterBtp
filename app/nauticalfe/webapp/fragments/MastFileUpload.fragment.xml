<core:FragmentDefinition xmlns="sap.m" xmlns:unified="sap.ui.unified" xmlns:core="sap.ui.core">
    <Dialog id="fileUpload" class="sapUiContentPadding" contentWidth="450px" contentHeight="150px" title="Chartering Request" >
        <content>
            <Text  text="This application needs a file to upload to SAP System"></Text>
            <HBox  class="MastDialogButtonAlign">
                <unified:FileUploader id="fileUploader" uploadUrl="yourBackendUploadUrl" class="masterbuttonsalign"/>
                <Button  text="Exit" class="masterbuttonsalign" press="exitDialog"></Button>
            </HBox>
        </content>
    </Dialog>
</core:FragmentDefinition>